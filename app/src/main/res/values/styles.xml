<resources>

    <style name="TransparentTextAppearance" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">#00000000</item>
    </style>

    <style name="ToolbarStyleLight" parent="Widget.AppCompat.Toolbar">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ToolbarStyleDark" parent="Widget.AppCompat.Toolbar">
        <item name="android:textColor">@color/gray</item>
    </style>

    <declare-styleable name="viewStyle">
        <attr name="viewStyle" format="reference"/>
    </declare-styleable>

    <declare-styleable name="toolbarBackground">
        <attr name="toolbarBackground" format="reference"/>
    </declare-styleable>

    <declare-styleable name="toolbarStyle">
        <attr name="toolbarStyle"/>
    </declare-styleable>

    <declare-styleable name="labelTextColor">
        <attr name="labelTextColor" format="reference"/>
    </declare-styleable>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Customize your theme here. -->
        <!--<item name="colorPrimary">@color/colorPrimary</item>-->
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <!--<item name="colorAccent">@color/colorAccent</item>-->
    </style>

    <!-- doubi style theme -->
    <style name="DouBiAppThemeDark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/toolbarDark</item>
        <item name="colorPrimaryDark">@android:color/holo_red_light</item>
        <item name="android:textColorPrimary">@android:color/holo_red_light</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSwitchThumbNormal">@android:color/holo_red_light</item>
        <item name="colorControlNormal">@android:color/holo_red_light</item>
        <item name="colorControlActivated">@android:color/holo_red_light</item>
        <item name="viewStyle">@style/viewStyleDarkSide</item>
        <item name="toolbarBackground">@color/toolbarDark</item>
        <item name="labelTextColor">@color/gray</item>
        <item name="toolbarStyle">@style/ToolbarStyleDark</item>
    </style>
    <!-- wenqing style theme -->
    <style name="WenQingAppThemeLight" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/alpha_60_white</item>
        <item name="colorPrimaryDark">@android:color/holo_blue_bright</item>
        <item name="android:textColorPrimary">@android:color/holo_blue_light</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSwitchThumbNormal">@android:color/holo_blue_light</item>
        <item name="colorControlNormal">@android:color/holo_blue_light</item>
        <item name="colorControlActivated">@android:color/holo_blue_light</item>
        <item name="viewStyle">@style/viewStyleBrightSide</item>
        <item name="toolbarBackground">@color/toolbarBright</item>
        <item name="labelTextColor">@color/light_grey</item>
        <item name="toolbarStyle">@style/ToolbarStyleLight</item>
    </style>

    <style name="viewStyleDarkSide">
        <item name="android:background">@color/darkish</item>
    </style>

    <style name="viewStyleBrightSide">
        <item name="android:background">@color/whitish</item>
    </style>

    <style name="ParagraphStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#525355</item>
        <item name="android:lineSpacingExtra">5dp</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="RadioButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/radio_button_height</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>
